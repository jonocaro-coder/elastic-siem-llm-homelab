# ============================================
#  Elastic Stack – Variables de entorno
# ============================================

# Versión de Elastic Stack utilizada en las imágenes Docker
ELASTIC_VERSION=8.12.0

# Contraseña del usuario 'elastic'
# (El valor real debe ir en tu archivo .env local, nunca en el repo)
ELASTIC_PASSWORD=changeme

# Contraseña del usuario interno de Logstash
LOGSTASH_INTERNAL_PASSWORD=changeme

# Contraseña del usuario interno de Kibana
KIBANA_SYSTEM_PASSWORD=changeme

# Contraseñas internas para Beats (si las usas)
METRICBEAT_INTERNAL_PASSWORD=changeme
FILEBEAT_INTERNAL_PASSWORD=changeme
HEARTBEAT_INTERNAL_PASSWORD=changeme
MONITORING_INTERNAL_PASSWORD=changeme
BEATS_SYSTEM_PASSWORD=changeme
